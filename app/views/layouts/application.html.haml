%html{:lang => "en"}
  %head
    %title StripeTutorial
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
  %body
    .container
      .navbar
        = link_to 'Songs', '#', class: 'btn btn-default'
        .pull_right
          - if session[:user_id]
            = link_to 'Subscribe', pricing_path, class: 'btn btn-default'
            = link_to 'Log Out', destroy_sessions_path, class: 'btn btn-default'
          - else
            = link_to 'Sign In', new_sessions_path, class: 'btn btn-default'
      .box.well
        = yield
